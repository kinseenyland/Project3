<!--This page allows the user to submit a form and add a new apartment to the database.-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form</title>
    <link href="img/provo2.png" rel="icon">
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="vendor/aos/aos.css" rel="stylesheet">
    <link href="vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="css/main.css" rel="stylesheet">
    <link href="css/form.css" rel="stylesheet">

</head>
<body class="page-index">
    <!-- ======= Header ======= -->
  <header id="header" class="header d-flex align-items-center fixed-top">
    <div class="container-fluid container-xl d-flex align-items-center justify-content-between">

      <a href="/" class="logo d-flex align-items-center">
        <!-- Uncomment the line below if you also wish to use an image logo -->
        <!-- <img src="assets/img/logo.png" alt=""> -->
        <h1 class="d-flex align-items-center">Apartments</h1>
      </a>

      <i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
      <i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>

      <nav id="navbar" class="navbar">
        <ul>
          <li><a href="adminLanding">Home</a></li>
          <li><a href="adminRecords">View Apartments</a></li>
          <li><a href="survey">Add an Apartment</a></li>
          <li><a href="/">Logout</a></li>
        </ul>
      </nav><!-- .navbar -->

    </div>
  </header><!-- End Header -->
    <br><br><br><br><br><br><br><br><br><br><br><br><br>
    <div class="container">
        <form action="/survey" method="post">
            <h2>Add an Apartment</h2>
            <fieldset>
                <label for="name">Apartment Name:</label>
                <input name="name" type="text" id="name" title="Type the name of the apartment." autofocus required>
                <br><br>
                <label for="rent">Monthy Rent:</label>
                <input name="rent" type="number" min="100" max="1000" id="rent" title="Type the monthly rent.">
                <br><br>
                <label for="address">Street Address:</label>
                <input name="address" type="text" id="address" title="Type the street address.">
                <br><br>
                <label for="city">City:</label>
                <select name="city" id="city">
                    <option value="Provo">Provo</option>
                    <option value="Orem">Orem</option>
                </select>
                <br><br>
                <label for="zip">Zip:</label>
                <input name="zip" type="number" id="zip" title="Type the zipcode.">
                <br><br>
                <label for="bedrooms">Bedrooms:</label>
                <select name="bedrooms" id="bedrooms">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
                <br><br>
                <label for="roomType">Room Type:</label>
                <select name="roomType" id="roomType">
                    <option value="Shared">Shared</option>
                    <option value="Private">Private</option>
                </select>
                <br><br>
                <label for="pets">Pets:</label>
                <select name="pets" id="pets">
                    <option value="N">No</option>
                    <option value="Y">Yes</option>
                </select>
                <br><br>
                <label for="rating">Rating:</label>
                <select name="rating" id="rating">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
                <br><br>
                <button type="submit" id="btnClick">Save</button>
            </fieldset>
        </form>
    </div>
    <script src="/js/main.js">
       

    </script>
</body>
</html>